@page "/appointmentbooked"
@using Microsoft.AspNetCore.WebUtilities
@inject NavigationManager _nav
@inject Appointment _db

<div class="container">
    <div class="row text-center">
        <div class="col">
            <h1 class="text-info">Order appointment has been submitted</h1>
        </div>
    </div>
    <div class="row">
        <div class="col text-center">
            <img src="data:image/png;base64," height="200" />
        </div>
    </div>
    <div class="row">
        <h6 class="col text-center">
            Your appointment has been submitted.
            Please feel free to contact us anytime you have any questions
        </h6>
    </div>
      
        <div class="row">
            <div class="col">
                <div class="table-responsive">
                    <table class="table table-striped border">
                        <thead class="bg-info">
                            <tr>Customer Name</tr>
                            <tr>Customer Surname</tr>
                            <tr>Appointment Day</tr>
                            <tr>Customer Name</tr>
                            <tr>Customer Phone Number</tr>
                            <tr>Customer Email</tr>
                            <tr>Address</tr>
                            <tr>Zip</tr>
                            <tr>City</tr>
                            <tr>Country</tr>
                            <tr>Is Confirmed</tr>
                        </thead>
                        <tbody>
                            @foreach (var item in listOfAppointments)
                            {
                                <tr>
                                    <td><input class="form-control" @bind="item.CustomerName" readonly/></td>
                                    <td><input class="form-control" @bind="item.CustomerSurname" readonly /></td>
                                    <td><input class="form-control" @bind="item.AppointmentDay" readonly /></td>
                                    <td><input class="form-control" @bind="item.AppointmentTime" readonly /></td>
                                    <td><input class="form-control" @bind="item.CustomerPhoneNumber" readonly /></td>
                                    <td><input class="form-control" @bind="item.CustomerEmail" readonly /></td>
                                    <td><input class="form-control" @bind="item.Address" readonly /></td>
                                    <td><input class="form-control" @bind="item.Zip" readonly /></td>
                                    <td><input class="form-control" @bind="item.Country" readonly /></td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    
</div>
@code
{
    List<Appointment> listOfAppointments;
    Uri url;
    static string txVal = string.Empty;
    PayPalResponse responseResult;
    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            url = _nav.ToAbsoluteUri(_nav.Uri);
            if (QueryHelpers.ParseQuery(url.Query).TryGetValue("tx", out var txValue))
            {
                txVal = txValue;
            }
            if (!string.IsNullOrWhiteSpace(txVal))
                responseResult = PayPalResponse.Success(txVal);
        }

    }
}
